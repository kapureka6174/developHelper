{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "eslint-config-prettier",
        "plugin:vue/vue3-essential",
        "plugin:prettier/vue3-recommended",
        "@vue/prettier",
        "plugin:tailwindcss/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "prettier",
        "tailwindcss"
    ],
    "rules": {
        "prettier/prettier": "error",
        "vue/no-v-model-argument": "off",
        "vue/no-v-for-template-key": "off"
    },
    "globals": {
        "route": true,
        "axios": true,
        "require": true,
        "module": true
    }
}
